<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Preço por likes</title>
    <style>
        * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Arial', sans-serif;
}

body {
    background-color: #121212;
    color: #ffffff;
    text-align: center;
    padding: 20px;
}

h1 {
    margin-top: 5%;
    font-size: 2rem;
    margin-bottom: 10px;
}

p {
    font-size: 1.2rem;
    margin-bottom: 15px;
    opacity: 0.8;
}

form {
    background: #1e1e1e;
    padding: 20px;
    border-radius: 10px;
    display: inline-block;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
}

input {
    padding: 10px;
    margin: 5px;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
}

button {
    background: #1db954;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 1rem;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s;
}

button:hover {
    background: #1aa34a;
}

    </style>
</head>
<body>
    <%- include('partials/header') %>

    <h1>Editar preço por likes: </h1>
    <form id="form-price">
        <label>Preço por like: </label>
        <input type="number" name="price" id="price" value="<%= price %>">
        <button type="submit">Atualizar</button>
    </form>

    <script>
        document.getElementById('form-price').addEventListener('submit', function(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const novoPreco = Object.fromEntries(formData.entries());

            axios.put('/price', novoPreco)
            .then(response => {
                console.log('Success:', response.data);
                alert("Preço atualizado com sucesso!")
                location.reload();
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        });
    </script>
</body>
</html>